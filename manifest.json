{
    "manifest_version": 2,

    "name": "ScriptHQ",
    "version": "0.1",
    // "default_locale": "en",        // TODO: look into supporting other languages
    "description": "Put a leash on your browser (rather than the other way around)",

    "browser_action": {
        "default_icon": {
            "19": "img/scripthq19.png",
            "38": "img/scripthq38.png"
        },
        "default_title": "Script HQ",
        "default_popup": "popup.html"
    },

    "author": "Raymond Hill",
    "background": {
        "scripts": ["background.js"]
    },

    "homepage_url": "https://github.com/gorhill/scripthq",

    "minimum_chrome_version": "28.0", // TODO: check with older versions

    "permissions": [
        "storage",                    // to persist white/black lists
        "tabs",                       // to query top domain string
        "webNavigation",              // to be notified when tab is loaded with new content
        "webRequest",                 // to intercept and examine requests
        "webRequestBlocking",         // to be able to cancel requests
        "<all_urls>"                  // to make extension work with all web sites
    ]
}
