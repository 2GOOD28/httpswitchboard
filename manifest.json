{
    "manifest_version": 2,
    "name": "HTTP Switchboard",
    "version": "0.2.2",
    "description": "Point & click to forbid/allow any class of requests made by your browser. Use it to block scripts, iframes, ads, facebook, etc.",
    "icons": {
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "img/scripthq19.png",
            "38": "img/scripthq38.png"
        },
        "default_title": "HTTP Switchboard",
        "default_popup": "popup.html"
    },
    "author": "Raymond Hill",
    "background": {
        "scripts": [
            "js/lib/jquery-2.min.js",
            "js/async.js",
            "js/background.js",
            "js/cookies.js",
            "js/inject.js",
            "js/lists.js",
            "js/storage.js",
            "js/tab.js",
            "js/traffic.js",
            "js/utils.js",
            "js/start.js"
        ]
    },
    "homepage_url": "https://github.com/gorhill/httpswitchboard/wiki",
    "minimum_chrome_version": "22.0",
    "options_page": "options.html",
    "permissions": [
        "contentSettings",
        "cookies",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "frame.html",
        "js/frame.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
